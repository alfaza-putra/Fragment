<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComedyFragment">


    <TextView
        android:id="@+id/action_sinopsis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Sinopsis film :  Keluarga McCallister bersiap untuk merayakan Natal di Paris, berkumpul di rumah Kate dan Peter di Chicago pada malam sebelum keberangkatan mereka. Anak bungsu Kate dan Peter, Kevin, seringkali dirundung oleh sepupu dan saudara kandungnya, terutama kakak laki-lakinya Buzz. "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="1016dp"
        android:src="@drawable/comedy" />
</FrameLayout>
